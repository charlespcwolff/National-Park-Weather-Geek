@model LoginViewModel

@section StyleSheet {
    <link href="~/css/Login.css" rel="stylesheet" />
}

@section Title {
    Login
}

<section class="login-header">
    <form asp-controller="User" asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" placeholder="Username" class="form-control" />
            <span asp-validation-for="Username" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" placeholder="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="error"></span>
        </div>
        <div>
            <a asp-controller="User" asp-action="Register" class="btn btn-danger btn-block" role="button">Register a new account</a>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
        <div>
            @Html.ValidationMessage("invalid-user", new { @class = "error" })
        </div>
    </form>
</section>